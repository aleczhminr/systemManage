
@{
    ViewBag.Title = "营销短信";
    Layout = null;
}

<div class="row column-seperation" id="marketingListTable">
    <input type="button" class="btn btn-sm btn-success m-t-10 m-l-10" name="新增短信" value="新增短信" id="addSmsM" onclick="AddSmsM()" />
    <input type="button" class="btn btn-sm btn-success m-t-10" name="编辑分类" value="编辑分类" id="modifyCateM" onclick="ModifyCateM()" />
    <table class="table table-hover  no-footer table-border-right">
        <thead>
        <tr>
            <th style="width: 120px">短信大类 </th>
            <th style="width: 150px;" class="text-center">小类</th>
            <th style="width: 800px;" class="text-center">短信内容</th>
            <th style="width: 120px;" class="text-center">添加日期</th>
            <th style="width: 120px;" class="text-center">操作</th>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div class="dataTables_wrapper" id="ListPageHtml">
        <div class="dataTables_paginate pagination">
            <ul><li class="prev disabled"><a href="javascript:void(0)"><i class="pg-arrow_left"></i></a></li><li class="active"><a href="javascript:void(0)">1</a></li><li class="next disabled"><a href="javascript:void(0)"><i class="pg-arrow_right"></i></a></li></ul>
        </div>
        <div class="dataTablePagText"></div>
    </div>
    <input type="hidden" value="" id="subTypeMarket" />
</div>

<div style=" display:none;" id="addSmsTextM">
    <div class="panel-body">
        <div class="row m-t-10 m-b-10" style="height:35px;" id="">
            <div class="cs-wrapper" style="display: block; margin-bottom: 10px;">
                <div tabindex="0">
                    短信分类:
                    <select class="cs-select cs-skin-slide" data-init-plugin="cs-select" name="smsCateM" onchange="GetCateM()" id="smsCateM">
                        <option value="节日祝福">节日祝福</option>
                        <option value="营销模板">营销模板</option>
                        <option value="短信秘笈">短信秘笈</option>
                    </select>
                </div>
            </div>
            <div class="cs-wrapper" style="display: block; margin-bottom: 10px">
                <div tabindex="0">
                    短信小类:
                    <select class="cs-select cs-skin-slide" data-init-plugin="cs-select" name="smsCateMinM" id="smsCateMinM">
                        <option value="0">正在加载</option>
                    </select>
                    <span style="cursor:pointer" class="btn-xs btn-success" id="addCateM" onclick="AddCateM()">添加</span>
                    <input type="text" name="cateM" value="" placeholder="分类名称" id="cateTextM" style="display:none" />
                </div>
            </div>
        </div>
        <div class="row m-t-40">
            短信内容:
            <textarea id="smsconM" oninput="txt_lengthM()" onpropertychange="    txt_lengthM()" onkeyup="    txt_lengthM()" onchange="    txt_lengthM() " rows="5" cols="100%" style="width: 297px; height: 103px;" class="b-grey m-b-10" name="context"> </textarea>
        </div>
        <div class="row left">
            <div class="input-group transparent" style="width:300px;">
                <span class="input-group-addon" style="border-width: 0px;">
                    字数：<span id="wordcntM" style="color: #16960e; font-weight: bold; margin-right: 35px;">0</span>
                </span>

                <input type="hidden" id="smsCnt" value="" name="smsCnt" />
            </div>

            @*短信计数*@

        </div>
    </div>
</div>

<div style=" display:none; width:600px;" id="cateTableM">
    <table class="table table-hover table-condensed  no-footer">
        <thead>
            <tr>
                <th class="text-center">分类名称</th>
                <th class="text-center">排序</th>
                <th class="text-center">操作</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<div style=" display:none;" id="updateNameM">
    新分类名称:
    <input type="text" name="newCateM" value="" placeholder="分类名称" id="newCateM" />
</div>

<div style=" display:none;" id="changeRankM">
    新排序号:
    <input type="text" name="newRankM" value="" placeholder="排序号" id="newRankM" />
</div>

<script type="text/html" id="cateTableScriptM">
    {{each data}}
    <tr>
        {{if $value.HiddenType==0}}
        <td class="text-center">{{$value.sms_class}}</td>
        {{else}}
        <td class="text-center" style="color:grey"><s>{{$value.sms_class}}</s></td>
        {{/if}}

        <td class="text-center" style="cursor: pointer" onclick="ChangeRankingM('{{$value.sms_class}}')">{{$value.sms_ranking}}</td>

        <td class="text-center">
            <a href="javascript:void(0)" onclick="UpdateCateNameM('{{$value.sms_class}}')">修改名称</a> |
            <a href="javascript:void(0)" onclick="DeleteCateM('{{$value.sms_class}}')">删除</a> |
            {{if $value.HiddenType==0}}
            <a href="javascript:void(0)" style="color:red" onclick="ChangeStatusM('{{$value.sms_class}}')">隐藏</a>
            {{else}}
            <a href="javascript:void(0)" style="color:green" onclick="ChangeStatusM('{{$value.sms_class}}')">显示</a>
            {{/if}}
        </td>
    </tr>
    {{/each}}
</script>

<script type="text/html" id="marketingListScript">
    {{each data}}
    <tr>
        <td>{{$value.sms_maxclass}}</td>
        {{if $value.HiddenType==0}}
<td class="text-center" style="cursor: pointer" onclick="GetMinClassMarket('{{$value.sms_class}}')">{{$value.sms_class}}</td>
{{else}}
        <td class="text-center" style="color:grey;cursor: pointer" onclick="GetMinClassMarket('{{$value.sms_class}}')"><s>{{$value.sms_class}}</s></td>
{{/if}}
        <td class="text-center" title="{{$value.sms_content}}">{{$value.sms_content}}</td>
        <td class="text-center">{{$value.sms_time}}</td>

        <td class="text-center">
            <a href="javascript:void(0)" onclick="EditSmsM('{{$value.id}}','{{$value.sms_maxclass}}','{{$value.sms_class}}','{{$value.sms_content}}')">编辑</a> |
            <a href="javascript:void(0)" onclick="DeleteSmsM('{{$value.id}}')">删除</a>
        </td>
    </tr>
    {{/each}}
</script>

