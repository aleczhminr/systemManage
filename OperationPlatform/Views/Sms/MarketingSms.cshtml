<script type="text/javascript">
    $(document).ready(function () {
        $("#subTypeMarket").val("");
        GetMarketing(1);
    });

    function GetMarketing(page) {
        var url = "/Sms/GetContentList";

        var postJson = {};
        postJson["page"] = page;
        postJson["type"] = "营销模板";
        postJson["subType"] = $("#subTypeMarket").val();

        $.doAjax(url, postJson, function (msg) {
            if (msg != "") {
                var json = $.parseJSON(msg);
                var dataList = $.parseJSON(json.list);
                var html = template("marketingListScript", { "data": dataList });
                $("#marketingListTable table tbody").html(html);
                if (page == 1) {
                    $("#ListPageHtml").attr("rowcount", json.rowCount).attr("maxpage", json.maxRow);
                    $("#ListPageHtml .dataTablePagText").html("共" + json.rowCount + "条");
                }
                var pageHtml = $.listPageHtml(page, $("#ListPageHtml").attr("maxpage"), "GetMarketing", 5);
                $("#ListPageHtml .dataTables_paginate").html(pageHtml);

                //dialog({
                //    id: "smsSmsContext",
                //    title: "信息详情",
                //    lock: true,
                //    opacity: 0.57,	// 透明度
                //    content: document.getElementById("smsInfoDetailsList"),
                //    cancel: true
                //}).showModal();
            }
        }, true);

    }

    function GetMinClassMarket(str) {
        $("#subTypeMarket").val(str);
        GetMarketing(1);
    }

    function EditSmsM(id, maxCate, minCate, content) {
        GetCateM();

        //alert(maxCate); alert(minCate);
        //$("#smsCate").find("option[text=" + maxCate + "]").attr("selected", true);
        //$("#smsCateMin").find("option[text=" + minCate + "]").attr("selected", true);
        $("#smsCateM").val(maxCate);
        $("#smsCateMinM").val(minCate);
        $("#smsconM").val(content);
        txt_lengthM();

        dialog({
            id: "updateFestivalSmsContextM",
            title: "修改短信内容",
            lock: true,
            opacity: 0.57,	// 透明度
            content: document.getElementById("addSmsTextM"),
            ok: function () {
                var ur = "/Sms/UpdateCommonSmsContent";

                var postJson = {};
                postJson["smsid"] = id;
                postJson["maxCate"] = $("#smsCateM").val();
                postJson["minCate"] = $("#smsCateMinM").val();
                postJson["smscontent"] = $("#smsconM").val();

                $.doAjax(ur, postJson, function (msg) {
                    //alert(msg);
                    if (msg == "1") {
                        alert("修改成功！");
                        GetMarketing(1);
                    } else {
                        alert("修改失败！");
                    }
                }, true);
            },
            cancel: true
        }).show();
    }

    function AddSmsM() {
        $("#smsCateMinM").val("");
        $("#smsconM").val("");
        txt_length();

        GetCate();
        //var pageVal = $("#cp").val();
        //alert(pageVal);
        //var ur = "/Sms/SmsAddModal/" + 1;
        dialog({
            id: "addFestivalSmsContextM",
            title: "记录信息",
            lock: true,
            opacity: 0.57,	// 透明度
            content: document.getElementById("addSmsTextM"),
            ok: function () {
                var ur = "/Sms/AddCommonSms";

                var postJson = {};

                postJson["maxCate"] = $("#smsCateM").val();
                postJson["minCate"] = $("#smsCateMinM").val();
                postJson["smscontent"] = $("#smsconM").val();

                $.doAjax(ur, postJson, function (msg) {
                    //alert(msg);
                    if (msg == "1") {
                        alert("新增成功！");
                        GetMarketing(1);
                    } else {
                        alert("新增失败！");
                    }
                }, true);
            },
            cancel: true
        }).show();
        //art.dialog.open(ur, { title: '新增短信', lock: true, opacity: 0.3, width: "500px", height: "300px" });
    }

    //编辑分类
    function ModifyCateM() {
        var ur = "/Sms/GetCateList";
        var postJson = {};
        postJson["type"] = "营销模板";

        $.doAjax(ur, postJson, function (msg) {
            //alert(msg);
            if (msg != "") {

                var json = $.parseJSON(msg);

                $("#cateTableM table tbody").html(template("cateTableScriptM", { "data": json }));

                dialog({
                    id: "modifyCateM",
                    title: "编辑分类",
                    lock: true,
                    opacity: 0.57,	// 透明度
                    content: document.getElementById("cateTableM"),
                    ok: function () {
                        //var ur = "/Sms/AddCommonSms";

                        //var postJson = {};

                        //postJson["maxCate"] = $("#smsCate").val();
                        //postJson["minCate"] = $("#smsCateMin").val();
                        //postJson["smscontent"] = $("#smscon").val();

                        //$.doAjax(ur, postJson, function (msg) {
                        //    //alert(msg);
                        //    if (msg == "1") {
                        //        alert("新增成功！");
                        //        GetMarketing(1);
                        //    } else {
                        //        alert("新增失败！");
                        //    }
                        //}, true);
                    },
                    cancel: true
                }).show();
                //GetMarketing(1);
            } else {
                alert("获取分类出错！");
            }
        }, true);


    }

    //添加新的短信小分类
    function AddCateM() {
        if ($("#cateTextM").is(":hidden")) {
            $("#cateTextM").show();
        }
        else {
            if ($("#cateTextM").val() == "") {
                $("#cateTextM").hide();
            } else {
                var minaddtext = $("#cateTextM");
                var classmin = $("#smsCateMinM");
                if (minaddtext.val().length > 0) {
                    var content = "<option  selected='true' value='" + minaddtext.val() + "'>" + minaddtext.val() + "</option>";
                    classmin.prepend(content);
                    classmin.get(0).selectedIndex = 0;
                    minaddtext.val("");
                }

                $("#cateTextM").hide();
            }
        }
    }

    function txt_lengthM() {
        var txtLength = parseInt($("#smsconM").val().length);

        $("#wordcntM").html(txtLength).css("color", "red");

    }

    function GetCateM() {
        $("#smsCateMinM option").remove();

        var maxCate = $("#smsCateM").find("option:selected").text();
        var postJson = {};
        postJson["maxCate"] = maxCate;

        var url = "/Sms/GetMinCate";

        $.doAjax(url, postJson, function (msg) {
            if (msg != "") {
                var json = $.parseJSON(msg);
                $.each(json, function (i, n) {
                    $("#smsCateMinM").append("<option value='" + n + "'>" + n + "</option>");
                });
            }
        }, true);
    }

    function DeleteSmsM(id) {
        dialog({
            id: "deleteSmsContextM",
            title: "删除提示",
            lock: true,
            opacity: 0.57,	// 透明度
            content: "你确定要删除该短信吗",
            ok: function () {
                //alert("OK");
                var ur = "/Sms/DeleteCommonSms";

                var postJson = {};

                postJson["id"] = id;

                $.doAjax(ur, postJson, function (msg) {
                    //alert(msg);
                    if (msg == "1") {
                        alert("删除成功！");
                        GetMarketing(1);
                    } else {
                        alert("删除失败！");
                    }
                }, true);
            },
            cancel: true
        }).show();
    }

    //更改分类名称
    function UpdateCateNameM(name) {


        dialog({
            id: "UpdateCateNameM",
            title: "新分类名称",
            lock: true,
            opacity: 0.57,	// 透明度
            content: document.getElementById("updateNameM"),
            ok: function () {
                //alert("OK");
                if ($("#newCateM").val() == "") {
                    alert("请输入新分类名称！");
                } else {
                    var ur = "/Sms/UpdateCateName";

                    var postJson = {};

                    postJson["maxName"] = "营销模板";
                    postJson["minName"] = name;
                    postJson["updateName"] = $("#newCateM").val();

                    $.doAjax(ur, postJson, function (msg) {
                        //alert(msg);
                        if (msg == "1") {
                            alert("修改成功！");
                            GetMarketing(1);
                            ModifyCateM();
                        } else {
                            alert("修改失败！");
                        }
                    }, true);
                }
            },
            cancel: true
        }).show();
    }

    //删除小分类
    function DeleteCateM(name) {
        dialog({
            id: "deleteSmsCateM",
            title: "删除提示",
            lock: true,
            opacity: 0.57,	// 透明度
            content: "该分类下的所有短信将被删除，确定删除？",
            ok: function () {
                //alert("OK");
                var ur = "/Sms/DeleteCate";

                var postJson = {};

                postJson["maxName"] = "营销模板";
                postJson["minName"] = name;

                $.doAjax(ur, postJson, function (msg) {
                    //alert(msg);
                    if (msg == "1") {
                        alert("删除成功！");
                        GetMarketing(1);
                        ModifyCateM();
                    } else {
                        alert("删除失败！");
                    }
                }, true);
            },
            cancel: true
        }).show();
    }

    //更改小分类显示/隐藏状态
    function ChangeStatusM(name) {
        var ur = "/Sms/ChangeStatus";

        var postJson = {};

        postJson["maxName"] = "营销模板";
        postJson["minName"] = name;

        $.doAjax(ur, postJson, function (msg) {
            //alert(msg);
            if (msg == "1") {
                //alert("成功！");
                GetMarketing(1);
                ModifyCateM();
            } else {
                alert("修改失败！");
            }
        }, true);
    }

    function ChangeRankingM(name) {
        dialog({
            id: "ChangeRank",
            title: "修改排序",
            lock: true,
            opacity: 0.57, // 透明度
            content: document.getElementById("changeRankM"),
            ok: function () {
                //alert("OK");
                if ($("#newRankM").val() == "") {
                    alert("请输入新排序号！");
                } else {
                    var ur = "/Sms/ChangeRanking";

                    var postJson = {};

                    postJson["maxName"] = "营销模板";
                    postJson["minName"] = name;
                    postJson["rank"] = $("#newRankM").val();

                    $.doAjax(ur, postJson, function (msg) {
                        //alert(msg);
                        if (msg == "1") {
                            alert("修改成功！");
                            GetMarketing(1);
                            ModifyCateM();
                        } else {
                            alert("修改失败！");
                        }
                    }, true);
                }
            },
            cancel: true
        }).show();
    }

</script>

