
@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    function Show(msg) {
        alert(msg);
    }
</script>

<h2>Index</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <div class="form-group">
                @using (Html.BeginForm("ChangePwd", "HomePage", FormMethod.Post))
                {
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="修改密码" name="changePWD" class="btn btn-default" />
                    </div>
                }

                @using (Html.BeginForm("ViewLoginLog", "HomePage", FormMethod.Post))
                {
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="查看日志" name="changePWD" class="btn btn-default" />
                    </div>
                }
                @using (Html.BeginForm("ViewShopCheck", "HomePage", FormMethod.Post))
                {
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="店铺审核" name="changePWD" class="btn btn-default" />
                    </div>
                }
            </div>
        </section>
    </div>
</div>

