@model OperationPlatform.Models.LoginViewModel

@{
    ViewBag.Title = "登录";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8"/>
    <meta charset="utf-8"/>
    <title>生意专家后台 - 登录页</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <link rel="icon" type="image/x-icon" href="favicon.ico"/>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta content="" name="description"/>
    <meta content="" name="author"/>
    <link href="/css/plugins/boostrapv3/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="/css/core/pages.min.css" rel="stylesheet" type="text/css"/>
</head>
<body class="fixed-header">
<!-- START PAGE-CONTAINER -->
<div class="login-wrapper">
    <!-- START Login Background Pic Wrapper-->
    <div class="bg-pic" >
        <!-- START Background Pic-->
        <img src="/img/new-york-city-buildings-sunrise-morning-hd-wallpaper.jpg" data-src="/img/new-york-city-buildings-sunrise-morning-hd-wallpaper.jpg" data-src-retina="/img/new-york-city-buildings-sunrise-morning-hd-wallpaper.jpg" alt="" style="width: 100%;" class="lazy">
        <!-- END Background Pic-->
        <!-- START Background Caption-->
        @*<div class="bg-caption pull-bottom sm-pull-bottom text-white p-l-20 m-b-20">
            <h2 class="semi-bold text-white">
                生意专家后台登录页
            </h2>
            <p class="small">
                images Displayed are solely for representation purposes only, All work copyright of respective owner, otherwise ? 2014-2015 Business Master.
            </p>
        </div>*@
        <!-- END Background Caption-->
    </div>
    <!-- END Login Background Pic Wrapper-->
    <!-- START Login Right Container-->
    <div class="login-container bg-white" style="margin: 0 auto 0;float:initial; position:initial;">
        <div class="p-l-50 m-l-20 p-r-50 m-r-20 p-t-50 m-t-30 sm-p-l-15 sm-p-r-15 sm-p-t-40" style=" margin:0px;">
            <img src="/img/logoPro-b.png" alt="logo" data-src="/img/logoPro-b.png" data-src-retina="/img/logoPro-b.png" width="120" height="30">
            <p class="p-t-35">Sign into your account</p>
            <!-- START Login Form -->
            <section id="form-login" class="p-t-15">
                <!-- START Form Control-->
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group form-group-default">
                        <label>Login</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <div class="form-group form-group-default">
                        <label class="fade">Password</label>
                        <div class="controls">
                            <input class="form-control" data-val="true" data-val-required="The 密码 field is required." id="Password" name="Password" type="password">
                            <span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="form-group form-group-default">
                        <label>Identifying code</label>
                        <div class="controls">
                            <img id="valiCode" style="cursor: pointer;" src="" onclick="valiCodeLoad()" alt="验证码" />
                            <input name="VerifyCode" id="VerifyCode" type="text" onclick="valiCodeLoad()" class="form-control" />
                            @Html.ValidationMessageFor(m => m.VerifyCode)
                        </div>
                    </div>
                    <input class="btn btn-primary btn-cons m-t-10" value="Log in" type="submit" />
                }
                <!-- END Form Control-->
            </section>
            <!--END Login Form-->
        </div>
    </div>
    <!-- END Login Right Container-->
</div>
<!-- END PAGE CONTAINER -->
<!-- BEGIN VENDOR JS -->

<script src="/Scripts/plugins/jquery/jquery.js"></script>
<script src="/Scripts/plugins/boostrapv3/bootstrap.min.js"></script>
<script src="/Scripts/plugins/jquery/jquery-easy.js"></script>
<script src="/Scripts/plugins/jquery-ui/jquery-ui.min.js"></script>
<script src="/Scripts/plugins/jquery-ui/jquery.validate.min.js"></script>
<script src="/Scripts/plugins/modernizr.custom.js"></script>
<!-- END VENDOR JS -->
<!-- BEGIN CORE TEMPLATE JS -->
<script src="/Scripts/core/pages.min.js"></script>
<!-- END CORE TEMPLATE JS -->
</body>
</html> 
@Html.Raw(@ViewBag.js)
<script type="text/javascript">
    $(document).ready(function () {
        $("#valiCode").attr("src", '/Account/GetValidateCode?update=' + Math.random());
    });
    function valiCodeLoad() {
        $("#valiCode").attr("src", '/Account/GetValidateCode?update=' + Math.random());
    }
</script>