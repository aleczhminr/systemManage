@{
    ViewBag.Title = "订单类型分析";
}

<style type="text/css">
    .icon-multiple {
        background-color: #959595;
    }

    .icon-font {
        display: inline-block;
        color: #fff;
        font-style: normal;
        font-size: 9px;
        line-height: 16px;
        text-align: center;
        border-radius: 1px;
        margin-right: 3px;
        padding: 0px 1px 0px 2px;
        background-color: lightblue;
        margin-top: 2px;
    }
