            x: "center"
        },
        tooltip: {
            trigger: 'item',
            formatter: function (a, b) {
                var html = "";
                var bj = a[0];
                var nowVal = Number(a[2]);
                var index = Number(b.replace(bj + ":", ""));

                var legendIndex = 0;
                $.each(option.legend.data, function (i, n) {
                    if (n == bj) {
                        legendIndex = i;
                    }
                });


                html = a[1] + "<br/>";
